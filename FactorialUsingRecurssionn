def factorial(n):
  if n <= 1:
      return n
  else:
      return (n * factorial(n-1))
 
n_terms = 10
 
# check if the number of terms is valid
if n_terms <= 0:
  print("Invalid input ! Please input a positive value")
else:
  print("Factorial series:")
for i in range(n_terms):
    print(factorial(i),end=' ')